{
  "apiRequestContactCreateTemplate": {
    "application/json": {
      "operation": "create",
      "payload": {
        "Item": "$input.json('$')"
      }
    }
  },
  "apiRequestContactReadTemplate": {
    "application/json": {
      "operation": "read",
      "payload": {
        "Key": {
          "email": "$input.params('email')" 
        }
      }
    }
  },
  "apiRequestContactUpdateTemplate": {
    "application/json": {
      "operation": "update",
      "payload": {
        "Item": "$input.json('$')" 
      }
    }
  }
}
